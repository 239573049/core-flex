@page "/users/login"
@inject NavigationManager NavigationManager
@inject IUserService UserService
@inject LocalStorageJsInterop LocalStorageJsInterop
@layout EmptyLayout

<MContainer Class="d-flex justify-center align-center" Style="height: 100vh;">
    <MCard Style="width:400px;" Outlined>
        <MCardTitle class="justify-center">
            <MAvatar>
                <MImage Src="favicon.png" Alt="Jack"></MImage>
            </MAvatar>
        </MCardTitle>
        <MCardSubtitle Class="justify-center" Style="text-align: center;font-size: 20px;margin: 5px;">
            欢迎使用Token客服系统！
        </MCardSubtitle>
        <MListItemSubtitle Style="padding: 8px;">
            <MTextField Label="您的昵称" Outlined @bind-Value="Name"></MTextField>
        </MListItemSubtitle>
        <MCardActions Class="justify-center">
            <MButton Color="primary" OnClick="GoTokenAsync" Block>进入</MButton>
        </MCardActions>
    </MCard>
</MContainer>